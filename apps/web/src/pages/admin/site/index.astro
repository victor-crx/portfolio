<!doctype html><html><head><meta charset='utf-8'><meta name='viewport' content='width=device-width,initial-scale=1'><title>Admin Advanced JSON Editor</title><link rel='stylesheet' href='/admin.css'></head>
<body class='admin' data-admin-page='site'>
<div class='admin-wrap admin-grid'>
  <aside class='admin-panel admin-nav' data-admin-nav>
    <h2>Admin</h2>
    <a href='/admin/'>Dashboard</a>
    <a href='/admin/projects/'>Projects</a>
    <a href='/admin/media/'>Media</a>
    <a href='/admin/services/'>Services</a>
    <a href='/admin/certifications/'>Certifications</a>
    <a href='/admin/labs/'>Labs</a>
    <a href='/admin/content/' class='admin-nav-primary'>Content Editor</a>
    <a href='/admin/site/'>Advanced (Raw JSON)</a>
    <a href='/admin/inquiries/'>Inquiries</a>
    <a href='/admin/audit/'>Audit</a>
    <button data-admin-logout>Logout</button>
  </aside>
  <main class='admin-panel'>
    <h1>Advanced (Raw JSON)</h1>
    <p class='admin-state admin-state-left'>Use <a href='/admin/content/'>Content Editor</a> for daily edits. This page is for advanced JSON overrides.</p>
    <form id='admin-form' class='admin-form'>
      <input name='id' placeholder='id (blank=create)' readonly>
      <label>Page
        <select name='page' data-site-page>
          <option value='home'>home</option>
          <option value='global'>global</option>
          <option value='contact'>contact</option>
        </select>
      </label>
      <label>Block key
        <select name='block_key' data-site-block-key>
          <option value='hero'>hero</option>
          <option value='press'>press</option>
          <option value='footer'>footer</option>
          <option value='intro'>intro</option>
        </select>
      </label>
      <input name='title' placeholder='title'>
      <textarea name='body' placeholder='body'></textarea>
      <label>JSON data
        <textarea name='data' data-site-json rows='12' placeholder='{"k":"v"}'></textarea>
      </label>
      <p class='admin-state' data-site-json-error hidden></p>
      <label>Status
        <select name='status'>
          <option value='draft'>draft</option>
          <option value='published'>published</option>
        </select>
      </label>
      <input name='featured_order' placeholder='featured_order'>
      <div>
        <button type='submit'>Save</button>
        <a href='/' target='_blank' rel='noreferrer' data-site-view-link>View page</a>
      </div>
    </form>
    <table class='admin-table'><thead><tr><th>ID</th><th>Page</th><th>Block</th><th>Status</th><th>Updated</th><th></th></tr></thead><tbody id='admin-table-body'></tbody></table>
  </main>
</div>
<script src='/admin.js' defer></script>
</body></html>
